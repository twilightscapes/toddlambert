---
export const prerender = true;
import type { GetStaticPaths, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { getEntry } from 'astro:content';
import Pagination from "@/components/Paginator.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PostsPageSearch from "@/components/PostsPageSearch.astro";
import { getAllPosts, getUniqueTags, groupPostsByYearMonth, sortMDByDate } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";

interface SiteSettings {
  MAX_POSTS_PER_PAGE: number;
  defaultView: 'grid' | 'swipe';
  showTags: boolean;
  showDates: boolean;
}

export const getStaticPaths = (async ({ paginate }) => {
  const siteSettings = await getEntry('siteSettings', 'main');

  // Define settings with fallbacks
  const settings: SiteSettings = {
    MAX_POSTS_PER_PAGE: siteSettings?.data?.MAX_POSTS_PER_PAGE ?? 10,
    defaultView: siteSettings?.data?.defaultView ?? 'grid',
    showTags: siteSettings?.data?.showTags ?? true,
    showDates: siteSettings?.data?.showDates ?? true
  };

  const allPosts = await getAllPosts();
  const allPostsByDate = sortMDByDate(allPosts, true);
  const uniqueTags = getUniqueTags(allPosts);
  
  return paginate(allPostsByDate, { 
    pageSize: settings.MAX_POSTS_PER_PAGE,
    props: { 
      uniqueTags, 
      defaultView: settings.defaultView,
      showTags: settings.showTags,
      showDates: settings.showDates
    } 
  });
}) satisfies GetStaticPaths;

// Get language settings for the page content
const language = await getEntry('language', 'index');

interface Props {
  page: Page<CollectionEntry<"post">>;
  uniqueTags: string[];
  defaultView: string;
  showTags: boolean;
  showDates: boolean;
}

const { page, uniqueTags, defaultView, showTags, showDates } = Astro.props;

const meta = {
	description: "Collection of posts",
	title: "Posts",
};

const paginationProps = {
	...(page.url.prev && {
		prevUrl: {
			text: `← Previous Page`,
			url: page.url.prev,
		},
	}),
	...(page.url.next && {
		nextUrl: {
			text: `Next Page →`,
			url: page.url.next,
		},
	}),
};

const groupedByYearMonth = groupPostsByYearMonth(page.data);
const descYearKeys = Object.keys(groupedByYearMonth).sort((a, b) => +b - +a);

// Month order for sorting
const monthOrder = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];

---

<PageLayout meta={meta}>
	<br />
	<span class="">
		<!-- Search Component with Filters -->
		<PostsPageSearch 
			sectionId="posts-page"
			defaultView={defaultView}
			showTags={showTags}
			searchMethod="hybrid"
			allPosts={page.data}
			groupedByYearMonth={groupedByYearMonth}
			uniqueTags={uniqueTags}
		/>

		<!-- Timeline View (Year/Month Spacers) -->
		<div class="posts-timeline" data-section-id="posts-page">
			<div class={`contentpanel section-content ${defaultView === 'swipe' ? 'slider' : 'grid-container'}`} style="">
				<div class="sliderSpacer"></div>
				{descYearKeys.map((yearKey) => {
					const monthsInYear = groupedByYearMonth[yearKey];
					const sortedMonthKeys = Object.keys(monthsInYear || {}).sort((a, b) => {
						return monthOrder.indexOf(b) - monthOrder.indexOf(a);
					});
					
					return (
						<>
							{sortedMonthKeys.map((monthKey) => (
								<>
									{typeof showDates !== 'undefined' && showDates && (
										<div class="grid place-content-center">
											<h2 class="title text-xl" style="margin-top: 2rem; margin-bottom: 0.25rem;">{yearKey}</h2>
											<h3 class="title text-lg" style="margin-top: 0; opacity: 0.7;">{monthKey}</h3>
										</div>
									)}
									{monthsInYear[monthKey]?.map((p) => (
										<PostPreview post={p} />
									))}
								</>
							))}
						</>
					);
				})}

				<div class="posts-pagination grid place-content-center min-w-[380px] min-h-[180px] max-h-[85%]">
					<Pagination {...paginationProps} />
				</div>
			</div>
		</div>

		<!-- Flat Filtered View (Hidden by Default) -->
		<div class="posts-flat-view" style="display: none;">
			<div class={`contentpanel section-content ${defaultView === 'swipe' ? 'slider' : 'grid-container'}`}>
				<div class="sliderSpacer"></div>
				{page.data.map((post) => {
					const postDate = new Date(post.data.publishDate);
					const year = postDate.getFullYear().toString();
					const month = postDate.toLocaleDateString('en-US', { month: 'long' });
					
					return (
						<div 
							class="post-item"
							data-tags={JSON.stringify(post.data.tags || [])}
							data-post-data={JSON.stringify({
								title: post.data.title,
								description: post.data.description,
								slug: post.slug
							})}
							data-year={year}
							data-month={month}
						>
							<PostPreview post={post} />
						</div>
					);
				})}
			</div>
		</div>

		<br /><br />
	</span>
</PageLayout>
